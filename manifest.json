{
  "manifest_version": 3,
  "name": "CP Progress Tracker",
  "version": "1.1.5",
  "description": "Track your competitive programming progress across 10+ platforms with detailed analytics and insights",
  "author": "thehav0k (https://github.com/thehav0k)",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "CP Progress Tracker"
  },
  
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  
  "host_permissions": [
    "https://codeforces.com/*",
    "https://leetcode.com/*",
    "https://atcoder.jp/*",
    "https://www.codechef.com/*",
    "https://www.hackerrank.com/*",
    "https://cses.fi/*",
    "https://www.spoj.com/*",
    "https://www.topcoder.com/*",
    "https://uhunt.onlinejudge.org/*",
    "https://practice.geeksforgeeks.org/*",
    "https://clist.by/*"
  ],
  
  "options_page": "options/options.html",
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
